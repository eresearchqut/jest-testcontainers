{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "lib": ["es2017"],
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "src/**/*.spec.ts"
  ],
  "types": [
    "node",
    "jest",
    "./@types",
    "./types/global.d.ts"
  ]
}
